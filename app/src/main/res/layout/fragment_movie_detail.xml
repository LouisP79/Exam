<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_img_height"
        tools:src="@mipmap/ic_launcher_round"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/movie_default_margin_start_end"
        android:layout_marginEnd="@dimen/movie_default_margin_start_end"
        android:layout_marginTop="@dimen/movie_img_margin_top"
        android:textSize="@dimen/movie_title_text_size"
        android:gravity="center"
        tools:text="Contra Cara"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/movie_default_margin_start_end"
        android:layout_marginEnd="@dimen/movie_default_margin_start_end"
        android:layout_marginTop="@dimen/movie_img_margin_top"
        android:gravity="center"
        tools:text="Mientras el terrorista Castor Troy est치 en coma, un agente del FBI decide asumir su identidad para saber d칩nde est치 escondida un arma biol칩gica."/>

</LinearLayout>